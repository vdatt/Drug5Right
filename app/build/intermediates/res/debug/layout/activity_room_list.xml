<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".RoomList"
    android:gravity="center_vertical|center_horizontal"
    android:background="#71effb">

    <!--TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" /-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/barcode" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Drug5Right"
        android:id="@+id/textView3"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_below="@id/imageView"
        android:textSize="45dp"
        android:layout_centerHorizontal="true"
        android:elegantTextHeight="false"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Helps improve medication administration workflow"
        android:id="@+id/textView2"
        android:layout_below="@id/textView3"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:editable="false"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:textAlignment="@integer/abc_max_action_buttons"
        android:gravity="center" />
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/button1"
        android:text="   GET STARTED   "
        android:background="@android:drawable/dialog_holo_light_frame"
        android:visibility="visible"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
