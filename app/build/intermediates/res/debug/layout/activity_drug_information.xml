<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="varun.edu.asu.scannerapp.DrugInformation">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewinfo"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttonScan"
        android:layout_below="@+id/textView4"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="ADMINISTER"
        android:id="@+id/buttonNext1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dip"
        android:background="#FF2196F3"
        android:gravity="center"
        android:textStyle="bold" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="EXCEPTION"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dip"
        android:background="#ff0000"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/information"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="#eaeaea"
        android:layout_above="@+id/listViewinfo"
        android:gravity="left|center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/rights"
        android:id="@+id/textView4"
        android:padding="10dp"
        android:background="#eaeaea"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/listViewinfo"
        android:layout_alignEnd="@+id/listViewinfo"
        android:gravity="left"
        android:autoText="false"
        android:textSize="17dp"
        android:textColor="#000000" />

</RelativeLayout>
